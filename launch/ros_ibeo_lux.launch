<?xml version="1.0"?>
<launch>
    <arg name="veh_frame_id" default="base_link"/>
    <arg name="lux_frame_id" default="ibeo_lux"/>
    <arg name="is_fusion_ecu" default="false"/>
    <arg name="name" default="ibeo_lux"/>
    <arg name="ip_address" value="192.168.0.1"/>
    <arg name="port" value="12002"/>

    <node pkg="ibeo_lux_driver" type="ros_ibeo_lux" name="$(arg name)">
      <param name="ip_address" value="$(arg ip_address)"/>
      <param name="port" type="int" value="$(arg port)"/>
      <param name="veh_frame_id" value="$(arg veh_frame_id)"/>
      <param name="sensor_frame_id" value="$(arg lux_frame_id)"/>           
      <param name="is_fusion" type="bool" value="$(arg is_fusion_ecu)"/>           
    </node>
</launch>

